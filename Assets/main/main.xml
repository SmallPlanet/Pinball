<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
    
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    <Button id="playModeButton" title="Actor" styleId="ButtonBig" titleFontColor="white" backgroundColor="#06C2FC" />
    <Constraint firstItem="playModeButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.95"/>
    <Constraint firstItem="playModeButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.4"/>
    <Constraint firstItem="playModeButton" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />
    <Constraint firstItem="playModeButton" firstAttribute="top" secondItem="root" secondAttribute="top" constant="80" />
    
    <Button id="scoreModeButton" title="Scorekeeper" styleId="ButtonBig" titleFontColor="white" backgroundColor="#FB16BB" />
    <Constraint firstItem="scoreModeButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.95"/>
    <Constraint firstItem="scoreModeButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.4"/>
    <Constraint firstItem="scoreModeButton" firstAttribute="centerX" secondItem="root" secondAttribute="centerX"  />
    <Constraint firstItem="scoreModeButton" firstAttribute="top" secondItem="playModeButton" secondAttribute="bottom" constant="30" />

</Scene>
