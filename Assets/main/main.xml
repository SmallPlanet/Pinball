<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
	
	<Label id="titleLabel" text="Pinball" styleId="LabelBld" textAlignment="center"/>
	<Constraint firstItem="titleLabel" ruleSet="fillSuperview" />

    <Button id="leftButton" backgroundColor="#FFAAAAFF"/>
    <Constraint firstItem="leftButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.5"/>
    <Constraint firstItem="leftButton" firstAttribute="left" secondItem="root" secondAttribute="left"/>
    <Constraint firstItem="leftButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.45"/>
    <Constraint firstItem="leftButton" firstAttribute="bottom" secondItem="root" secondAttribute="bottom"/>

    <Button id="rightButton" backgroundColor="#AAAAFFFF"/>
    <Constraint firstItem="rightButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.5"/>
    <Constraint firstItem="rightButton" firstAttribute="right" secondItem="root" secondAttribute="right"/>
    <Constraint firstItem="rightButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.45"/>
    <Constraint firstItem="rightButton" firstAttribute="bottom" secondItem="root" secondAttribute="bottom"/>

</Scene>
