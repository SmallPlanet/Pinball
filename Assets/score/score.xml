<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
	
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    <ImageView id="preview" contentMode="scaleAspectFit" backgroundColor="#000000FF" cornerRadius="5" shadowRadius="4" shadowOffset="0,3" shadowColor="#000000FF" shadowOpacity="0.5">
        <ImageView id="overlay" contentMode="scaleAspectFit" />
        <Constraint firstItem="overlay" ruleSet="fillSuperview" />
    </ImageView>
    <Constraint firstItem="preview" firstAttribute="bottom" secondItem="root" secondAttribute="bottom" constant="-10"/>
    <Constraint firstItem="preview" firstAttribute="left" secondItem="root" secondAttribute="left" constant="10"/>
    <Constraint firstItem="preview" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.46" />
    <Constraint firstItem="preview" firstAttribute="top" secondItem="root" secondAttribute="top" constant="80" />
    
    <Label id="statusLabel" styleId="LabelUnispace" fontSize="32" textColor="#06C2FC" text="9,999,999,999" textAlignment="center" />
    <Constraint firstItem="statusLabel" firstAttribute="centerY" secondItem="root" secondAttribute="centerY" />
    <Constraint firstItem="statusLabel" firstAttribute="centerX" secondItem="preview" secondAttribute="right" constant="30" />
    
    <Button id="saveImageButton" title="Save Image" styleId="ButtonStd" />
    <Constraint firstItem="saveImageButton" firstAttribute="width" constant="120"/>
    <Constraint firstItem="saveImageButton" firstAttribute="height" constant="100"/>
    <Constraint firstItem="saveImageButton" firstAttribute="right" secondItem="root" secondAttribute="right" constant="-10" />
    <Constraint firstItem="saveImageButton" firstAttribute="top" secondItem="root" secondAttribute="top" constant="120" />
    
    <Button id="calibrateButton" title="Calibrate" styleId="ButtonStd" />
    <Constraint firstItem="calibrateButton" firstAttribute="width" constant="120"/>
    <Constraint firstItem="calibrateButton" firstAttribute="height" constant="100"/>
    <Constraint firstItem="calibrateButton" firstAttribute="right" secondItem="root" secondAttribute="right" constant="-10" />
    <Constraint firstItem="calibrateButton" firstAttribute="top" secondItem="saveImageButton" secondAttribute="bottom" constant="40" />
    
    
    
     
     
     <ImageView id="calibrationBlocker" backgroundColor="#003300EE" hidden="true" >
         <Label id="calibrationLabel" styleId="LabelBld" numberOfLines="2" fontSize="48" textColor="#FFFFFFFF" text="" textAlignment="center" />
         <Constraint firstItem="calibrationLabel" ruleSet="fillSuperview" />
     </ImageView>
     <Constraint firstItem="calibrationBlocker" ruleSet="fillSuperview" />
    

</Scene>
