<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
	
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    


    <Button id="leftButton" title="left" styleId="ButtonStd" />
    <Constraint firstItem="leftButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.45"/>
    <Constraint firstItem="leftButton" firstAttribute="left" secondItem="root" secondAttribute="left" constant="5" />
    <Constraint firstItem="leftButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.5"/>
    <Constraint firstItem="leftButton" firstAttribute="bottom" secondItem="root" secondAttribute="bottom" constant="-5" />

    <Button id="rightButton" title="right" styleId="ButtonStd"/>
    <Constraint firstItem="rightButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.45"/>
    <Constraint firstItem="rightButton" firstAttribute="right" secondItem="root" secondAttribute="right" constant="-5" />
    <Constraint firstItem="rightButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.5"/>
    <Constraint firstItem="rightButton" firstAttribute="bottom" secondItem="root" secondAttribute="bottom" constant="-5" />
    
    <Label id="statusLabel" styleId="LabelBld" text="" textAlignment="center" />
    <Constraint firstItem="statusLabel" firstAttribute="width" constant="260"/>
    <Constraint firstItem="statusLabel" firstAttribute="height" constant="40"/>
    <Constraint firstItem="statusLabel" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />
    <Constraint firstItem="statusLabel" firstAttribute="top" secondItem="root" secondAttribute="top" constant="80" />
    
    <Button id="captureButton" title="Capture Mode Unknown" styleId="ButtonStd" />
    <Constraint firstItem="captureButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.3" />
    <Constraint firstItem="captureButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.2" />
    <Constraint firstItem="captureButton" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />
    <Constraint firstItem="captureButton" firstAttribute="top" secondItem="statusLabel" secondAttribute="bottom" constant="20" />
    
    <Button id="kickerButton" title="Ball Kicker" styleId="ButtonStd" />
    <Constraint firstItem="kickerButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.3" />
    <Constraint firstItem="kickerButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.15" />
    <Constraint firstItem="kickerButton" firstAttribute="left" secondItem="captureButton" secondAttribute="right" constant="20" />
    <Constraint firstItem="kickerButton" firstAttribute="top" secondItem="captureButton" secondAttribute="top" constant="0" />
    
    <Button id="startButton" title="Start Game" styleId="ButtonStd" />
    <Constraint firstItem="startButton" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.3" />
    <Constraint firstItem="startButton" firstAttribute="height" secondItem="root" secondAttribute="height" multiplier="0.15" />
    <Constraint firstItem="startButton" firstAttribute="right" secondItem="captureButton" secondAttribute="left" constant="-20" />
    <Constraint firstItem="startButton" firstAttribute="top" secondItem="captureButton" secondAttribute="top" constant="0" />
    
</Scene>
