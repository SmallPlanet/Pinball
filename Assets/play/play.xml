<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
	
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    <ImageView id="preview" contentMode="scaleAspectFit" backgroundColor="#000000FF" cornerRadius="5" shadowRadius="4" shadowOffset="0,3" shadowColor="#000000FF" shadowOpacity="0.5">
        <ImageView id="overlay" contentMode="scaleAspectFit" />
        <Constraint firstItem="overlay" ruleSet="fillSuperview" />
    </ImageView>
    <Constraint firstItem="preview" firstAttribute="left" secondItem="root" secondAttribute="left"/>
    <Constraint firstItem="preview" firstAttribute="right" secondItem="root" secondAttribute="right"/>
    <Constraint firstItem="preview" firstAttribute="height" secondItem="preview" secondAttribute="width"/>
    <Constraint firstItem="preview" firstAttribute="top" secondItem="root" secondAttribute="top" constant="60" />
    
    <Label id="statusLabel" styleId="LabelStd" text="fps" fontSize="14" textAlignment="right" textColor="#46586dff" />
    <Constraint firstItem="statusLabel" firstAttribute="right" secondItem="root" secondAttribute="right" constant="-5"/>
    <Constraint firstItem="statusLabel" firstAttribute="centerY" secondItem="deadman" secondAttribute="centerY" />
    
    <Switch id="deadman" on="false"/>
    <Constraint firstItem="deadman" firstAttribute="left" secondItem="root" secondAttribute="left" constant="10"/>
    <Constraint firstItem="deadman" firstAttribute="top" secondItem="preview" secondAttribute="bottom" constant="8"/>
    <Label id="deadmanLabel" styleId="LabelBld" text="Use Omega" textAlignment="left"/>
    <Constraint firstItem="deadmanLabel" firstAttribute="left" secondItem="deadman" secondAttribute="right" constant="8"/>
    <Constraint firstItem="deadmanLabel" firstAttribute="centerY" secondItem="deadman" secondAttribute="centerY"/>

    <View id="leftFlipper" backgroundColor="#46586dff" borderColor="#1c2f42ff" borderWidth="8">
        <View id="leftPrediction" backgroundColor="#06c2fcff"/>
        <Constraint firstItem="leftPrediction" firstAttribute="left" secondItem="leftFlipper" secondAttribute="left"/>
        <Constraint firstItem="leftPrediction" firstAttribute="width" secondItem="leftFlipper" secondAttribute="width"/>
        <Constraint firstItem="leftPrediction" firstAttribute="bottom" secondItem="leftFlipper" secondAttribute="bottom"/>
        <Constraint id="leftPredictionRatio" firstItem="leftPrediction" firstAttribute="height" />
    </View>
    <Constraint firstItem="leftFlipper" firstAttribute="left" secondItem="root" secondAttribute="left"/>
    <Constraint firstItem="leftFlipper" firstAttribute="bottom" secondItem="root" secondAttribute="bottom"/>
    <Constraint firstItem="leftFlipper" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.2"/>
    <Constraint firstItem="leftFlipper" firstAttribute="top" secondItem="preview" secondAttribute="bottom" constant="80"/>
    <Label id="leftLabel" styleId="LabelBld" text="Left" textAlignment="center" />
    <Constraint firstItem="leftLabel" firstAttribute="centerX" secondItem="leftFlipper" secondAttribute="centerX"/>
    <Constraint firstItem="leftLabel" firstAttribute="baseline" secondItem="leftFlipper" secondAttribute="top" constant="-8"/>


    <View id="rightUpperFlipper" backgroundColor="#46586dff" borderColor="#1c2f42ff" borderWidth="8">
        <View id="rightUpperPrediction" backgroundColor="#06c2fcff"/>
        <Constraint firstItem="rightUpperPrediction" firstAttribute="right" secondItem="rightUpperFlipper" secondAttribute="right"/>
        <Constraint firstItem="rightUpperPrediction" firstAttribute="width" secondItem="rightUpperFlipper" secondAttribute="width"/>
        <Constraint firstItem="rightUpperPrediction" firstAttribute="bottom" secondItem="rightUpperFlipper" secondAttribute="bottom"/>
        <Constraint id="rightUpperPredictionRatio" firstItem="rightUpperPrediction" firstAttribute="height"/>
    </View>
    <Constraint firstItem="rightUpperFlipper" firstAttribute="right" secondItem="rightFlipper" secondAttribute="left"/>
    <Constraint firstItem="rightUpperFlipper" firstAttribute="bottom" secondItem="root" secondAttribute="bottom"/>
    <Constraint firstItem="rightUpperFlipper" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.2"/>
    <Constraint firstItem="rightUpperFlipper" firstAttribute="top" secondItem="preview" secondAttribute="bottom" constant="80"/>
    <Label id="rightUpperLabel" styleId="LabelBld" text="Upper" textAlignment="center" />
    <Constraint firstItem="rightUpperLabel" firstAttribute="centerX" secondItem="rightUpperFlipper" secondAttribute="centerX"/>
    <Constraint firstItem="rightUpperLabel" firstAttribute="baseline" secondItem="rightUpperFlipper" secondAttribute="top" constant="-8"/>


    <View id="rightFlipper" backgroundColor="#46586dff" borderColor="#1c2f42ff" borderWidth="8">
        <View id="rightPrediction" backgroundColor="#06c2fcff"/>
        <Constraint firstItem="rightPrediction" firstAttribute="right" secondItem="rightFlipper" secondAttribute="right"/>
        <Constraint firstItem="rightPrediction" firstAttribute="width" secondItem="rightFlipper" secondAttribute="width"/>
        <Constraint firstItem="rightPrediction" firstAttribute="bottom" secondItem="rightFlipper" secondAttribute="bottom"/>
        <Constraint id="rightPredictionRatio" firstItem="rightPrediction" firstAttribute="height"/>
    </View>
    <Constraint firstItem="rightFlipper" firstAttribute="right" secondItem="root" secondAttribute="right"/>
    <Constraint firstItem="rightFlipper" firstAttribute="bottom" secondItem="root" secondAttribute="bottom"/>
    <Constraint firstItem="rightFlipper" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.2"/>
    <Constraint firstItem="rightFlipper" firstAttribute="top" secondItem="preview" secondAttribute="bottom" constant="80"/>
    <Label id="rightLabel" styleId="LabelBld" text="Right" textAlignment="center" />
    <Constraint firstItem="rightLabel" firstAttribute="centerX" secondItem="rightFlipper" secondAttribute="centerX"/>
    <Constraint firstItem="rightLabel" firstAttribute="baseline" secondItem="rightFlipper" secondAttribute="top" constant="-8"/>


</Scene>
