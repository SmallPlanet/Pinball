<?xml version="1.0" encoding="UTF-8"?>
<Scene id="root" xmlns="http://schema.smallplanet.com/PlanetUI">
    <Constraint firstItem="root" ruleSet="fillSuperview" />
	
    <View id="background" backgroundColor="#EEEEEEFF" />
    <Constraint firstItem="background" ruleSet="fillSuperview" />
    
    <ImageView id="preview" contentMode="scaleAspectFit" backgroundColor="#000000FF" cornerRadius="5" shadowRadius="4" shadowOffset="0,3" shadowColor="#000000FF" shadowOpacity="0.5">
        <ImageView id="overlay" contentMode="scaleAspectFit" />
        <Constraint firstItem="overlay" ruleSet="fillSuperview" />
    </ImageView>
    <Constraint firstItem="preview" firstAttribute="width" constant="260"/>
    <Constraint firstItem="preview" firstAttribute="height" constant="260"/>
    <Constraint firstItem="preview" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />
    <Constraint firstItem="preview" firstAttribute="centerY" secondItem="root" secondAttribute="top" constant="240" />
    
    <Label id="cameraLabel" styleId="LabelStd" text="Camera Preview" textAlignment="center" />
    <Constraint firstItem="cameraLabel" firstAttribute="width" constant="260"/>
    <Constraint firstItem="cameraLabel" firstAttribute="height" constant="40"/>
    <Constraint firstItem="cameraLabel" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />
    <Constraint firstItem="cameraLabel" firstAttribute="bottom" secondItem="preview" secondAttribute="top" constant="3" />

    <Button id="startEpisode" title="Start episode" styleId="ButtonBig" titleFontColor="white" backgroundColor="#06C2FC" />
    <Constraint firstItem="startEpisode" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.95"/>
    <Constraint firstItem="startEpisode" firstAttribute="height" constant="80"/>
    <Constraint firstItem="startEpisode" firstAttribute="top" secondItem="preview" secondAttribute="bottom" constant="30" />
    <Constraint firstItem="startEpisode" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />

    <Button id="gameOver" title="End episode (game over)" styleId="ButtonBig" titleFontColor="white" backgroundColor="#FB16BB" />
    <Constraint firstItem="gameOver" firstAttribute="width" secondItem="root" secondAttribute="width" multiplier="0.95"/>
    <Constraint firstItem="gameOver" firstAttribute="height" constant="80"/>
    <Constraint firstItem="gameOver" firstAttribute="top" secondItem="startEpisode" secondAttribute="bottom" constant="30" />
    <Constraint firstItem="gameOver" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />

    <Switch id="deadman" on="false"/>
    <Constraint firstItem="deadman" firstAttribute="left" secondItem="root" secondAttribute="left" constant="10"/>
    <Constraint firstItem="deadman" firstAttribute="bottom" secondItem="root" secondAttribute="bottom" constant="-8"/>
    <Label id="deadmanLabel" styleId="LabelBld" text="Enable pinball" textAlignment="left"/>
    <Constraint firstItem="deadmanLabel" firstAttribute="left" secondItem="deadman" secondAttribute="right" constant="8"/>
    <Constraint firstItem="deadmanLabel" firstAttribute="centerY" secondItem="deadman" secondAttribute="centerY"/>

    <Label id="statusLabel" styleId="LabelBld" text="ABCDEFG" textAlignment="center" />
    <Constraint firstItem="statusLabel" firstAttribute="width" constant="260"/>
    <Constraint firstItem="statusLabel" firstAttribute="height" constant="40"/>
    <Constraint firstItem="statusLabel" firstAttribute="centerX" secondItem="root" secondAttribute="centerX" />
    <Constraint firstItem="statusLabel" firstAttribute="bottom" secondItem="deadman" secondAttribute="top" constant="10" />


</Scene>
